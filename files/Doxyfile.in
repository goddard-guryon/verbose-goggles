# this will be edited automatically
PROJECT_NAME = project_name
INPUT = @DOXYGEN_INPUT_DIR@
OUTPUT_DIRECTORY = @CMAKE_CURRENT_BINARY_DIR@/doc_doxygen/
OPTIMIZE_FOR_FORTRAN = YES
EXTENSION_MAPPING = f90=FortranFree

# custom theme by Doxygen Awesome, check github.com/jothepro/doxygen-awesome-css
HTML_EXTRA_STYLESHEET = ../docs/scripts/theme.css
HTML_HEADER = ../docs/scripts/header.html
GENERATE_TREEVIEW = YES
FULL_SIDEBAR = NO
